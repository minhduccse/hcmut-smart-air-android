<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temperature_value"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/layout1"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"

        >

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="115dp"
            android:background="@drawable/vien">

            <TextView
                android:id="@+id/air_conditioner_label"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Air Condition"
                android:textSize="13dp"
                android:textColor="#BDBDBD"/>

            <TextView
                android:id="@+id/temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/air_conditioner_label"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/number"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp_value"
                android:layout_toEndOf="@+id/temp_value"
                android:fontFamily="@font/nunito_bold"
                android:text="°C"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/but_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="86dp"
                android:background="@drawable/button"
                app:srcCompat="@drawable/down"



                />

            <ImageButton
                android:id="@+id/but_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="35dp"
                android:background="@drawable/button"
                app:srcCompat="@drawable/up" />


        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout2"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="115dp"
            android:background="@drawable/vien">

            <TextView
                android:id="@+id/indoor_temperature_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Indoor Temperature"
                android:textSize="13dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#BDBDBD"
                />

            <TextView
                android:id="@+id/indoor_temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/indoor_temperature_label"
                android:layout_marginTop="29dp"
                android:text="20"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/indoor_temp_value"
                android:layout_toEndOf="@+id/indoor_temp_value"
                android:text="°C"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/outdoor_temperature_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/indoor_temperature_label"
                android:layout_marginTop="57dp"
                android:text="Outdoor Temperature"
                android:textSize="13dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#BDBDBD"/>

            <TextView
                android:id="@+id/outdoor_temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/indoor_temperature_label"
                android:layout_marginBottom="15dp"
                android:text="15"
                android:textSize="20dp"
                android:fontFamily="@font/nunito_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/outdoor_temp_value"
                android:layout_toEndOf="@+id/outdoor_temp_value"
                android:text="°C"
                android:textSize="20dp"
                android:fontFamily="@font/nunito_bold"/>


        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="227dp">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="115dp"
            android:background="@drawable/vien">

            <TextView
                android:id="@+id/record_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Number of Records"
                android:textSize="13dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#BDBDBD"/>

            <TextView
                android:id="@+id/record_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/record_label"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/nunito_bold"
                android:text="1000"
                android:textSize="20dp"/>
        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>